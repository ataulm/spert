<manifest xmlns:android="http://schemas.android.com/apk/res/android"
  package="com.ataulm.spert">

  <uses-permission android:name="android.permission.INTERNET" />
  <uses-permission android:name="android.permission.AUTHENTICATE_ACCOUNTS" />
  <uses-permission android:name="android.permission.GET_ACCOUNTS" />

  <uses-permission android:name="android.permission.MANAGE_ACCOUNTS" />

  <application
    android:allowBackup="true"
    android:icon="@drawable/ic_launcher"
    android:label="@string/app_name"
    android:theme="@style/AppTheme">

    <activity android:name=".MyActivity" />
    <activity android:name=".auth.OAuthSignInActivity">
      <intent-filter>
        <action android:name="android.intent.action.VIEW"></action>

        <category android:name="android.intent.category.DEFAULT"></category>
        <category android:name="android.intent.category.BROWSABLE"></category>

        <data android:host="com.ataulm.spert.spotify"></data>
        <data android:scheme="http"></data>
        <data android:pathPattern="/.*"></data>
      </intent-filter>
    </activity>

    <activity-alias
      android:name="activity.primary_launcher"
      android:targetActivity=".MyActivity">

      <intent-filter>
        <action android:name="android.intent.action.MAIN" />
        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>

    </activity-alias>

    <service
      android:name=".auth.AccountService"
      android:exported="false">
      <intent-filter>
        <action android:name="android.accounts.AccountAuthenticator" />
      </intent-filter>
      <meta-data
        android:name="android.accounts.AccountAuthenticator"
        android:resource="@xml/spotify_authenticator" />
    </service>

  </application>

</manifest>
